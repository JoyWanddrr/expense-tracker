<div class="container">
  <div class="container-items">
    {{!-- 類別下拉式選單 --}}
    <div class="d-flex flex-column  align-items-center">
      <div class="d-flex flex-column  align-items-center">
        <form action="/sort">
          <select class="form-control" name="sort" id="sort" onchange="this.form.submit()"
            style="margin-top:20px;width:250px">
            <option value="">類別</option>
            {{#each iconForRender}}
            {{!-- 渲染icon進入下拉式選單，將value值變更為categoryId --}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </form>
      </div>
      {{!-- 總金額 --}}
      <div class="totalAmount d-flex justify-content-between">
        <p class="m-4 p-1">您已花費:</p>
        <p class="m-4 fs-1">$ {{totalAmount}} 元</p>
      </div>
    </div>
    {{!-- 細項，包含刪除修改 --}}
    <div class="list">
      <ul class="list-group">
        {{!-- white --}}
        {{#each expenses}}
        {{!-- list-group-item-dark --}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <i class="fs-1 {{this.categoryId.icon}}" style="font-size: 60px;color:cornflowerblue;"></i>
            <div>
              <h4>{{this.name}}</h4>
              <font size="1">{{this.date}}</font>
            </div>
          </div>
          <p class="">${{this.amount}}</p>
          <div>
            <a class="btn btn-light" href="/expenses/{{this._id}}/edit">
              修改
            </a>
            <form action="/expenses/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-dark">刪除</button>
            </form>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
    {{!-- 新增支出按鈕 --}}
    <div class=" m-4 d-flex justify-content-center">
      <a class="btn" href="/expenses/new" style="background-color: orange;color:white;border:1px solid black">
        新增支出
      </a>
    </div>
  </div>
</div>